<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
                   ohos:id="$+id:root"
                   ohos:width="match_parent"
                   ohos:height="match_parent"
                   ohos:orientation="vertical">

    <TextField
        ohos:id="$+id:tf_email"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:hint="E-mail address"

        ohos:text_size="25fp"/>

    <Text
        ohos:id="$+id:err_email"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="15fp"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:visibility="hide"
        />

    <TextField
        ohos:id="$+id:tf_password"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:hint="Password"
        ohos:text_input_type="pattern_password"
        ohos:text_size="25fp"/>

    <Text
        ohos:id="$+id:err_password"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="15fp"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:visibility="hide"
        />

    <TextField
        ohos:id="$+id:tf_password2"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:hint="Verify Password"
        ohos:text_input_type="pattern_password"
        ohos:text_size="25fp"/>

    <Text
        ohos:id="$+id:err_password2"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="15fp"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:visibility="hide"
        />

    <TextField
        ohos:id="$+id:tf_phone"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:hint="Phone (not mandatory)"
        ohos:text_input_type="pattern_number"
        ohos:text_size="25fp"/>

    <Text
        ohos:id="$+id:err_phone"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="15fp"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:visibility="hide"
        />

    <!--    ohos:text="@={viewModel.email.value}"-->

    <Button
        ohos:id="$+id:btn_submit"
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:text="Submit"
        ohos:text_size="25fp"/>

</DirectionalLayout>